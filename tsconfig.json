{
    "compilerOptions": {
        "outDir": "./packages/**/",
        "moduleResolution": "node",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "components/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
